{
  "name": "kateray",
  "version": "1.0.0",
  "engines": {
    "node": "8.4.0"
  },
  "main": "index.js",
  "repository": "git://github.com/kateray/kateray.git",
  "author": "Kate Ray",
  "license": "MIT",
  "scripts": {
    "test": "standard && jest",
    "start:dev": "npm-run-all --parallel watch:server watch:build",
    "build": "NODE_ENV=production webpack --env=prod --progress --colors",
    "heroku-postbuild": "npm run build",
    "watch:build": "webpack --env=dev -d --watch",
    "watch:server": "nodemon server/src/index.js --exec babel-node",
    "start": "node server/src"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "test",
      "expect"
    ],
    "ignore": [
      "/dist/"
    ]
  },
  "dependencies": {
    "airbrake": "^2.1.0",
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "css-loader": "^0.28.4",
    "express": "^4.17.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.2",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-manifest-plugin": "^1.1.2"
  },
  "devDependencies": {
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0",
    "yarn-run-all": "^3.1.1"
  }
}
